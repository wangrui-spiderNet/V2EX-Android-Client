<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:id="@+id/topic_info"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/topic_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/topic_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/topic_icon"
            android:layout_toRightOf="@id/topic_icon"
            android:textSize="@dimen/material_body" />

        <TextView
            android:id="@+id/topic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/topic_icon"
            android:layout_toRightOf="@id/topic_icon" />

        <TextView
            android:id="@+id/topic_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/topic_time"
            android:layout_toRightOf="@id/topic_time" />

        <android.support.v7.widget.CardView
            android:id="@+id/topic_node_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/topic_node"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textSize="@dimen/material_button" />

        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <View
        android:id="@+id/topic_gap_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/topic_info"
        android:background="@color/material_grey_400" />

    <TextView
        android:id="@+id/topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic_gap_1"
        android:layout_margin="5dp"
        android:textSize="@dimen/material_title" />

    <zhou.v2ex.ui.widget.RichText
        android:id="@+id/topic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic_title"
        android:layout_margin="5dp"
        android:textSize="@dimen/material_body" />

    <View
        android:id="@+id/topic_gap_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/topic_content"
        android:background="@color/material_grey_400" />


</RelativeLayout>




