<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:padding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_replies_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/item_replies_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/item_replies_icon"
            android:layout_toRightOf="@id/item_replies_icon"
            android:textSize="@dimen/material_caption" />

        <TextView
            android:id="@+id/item_replies_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/item_replies_user"
            android:layout_toRightOf="@id/item_replies_user"
            android:textSize="@dimen/material_caption" />

        <TextView
            android:id="@+id/item_replies_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:textSize="@dimen/material_caption" />

        <zhou.v2ex.ui.widget.RichText
            android:id="@+id/item_replies_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_replies_user"
            android:layout_toEndOf="@id/item_replies_icon"
            android:layout_toRightOf="@id/item_replies_icon"
            android:textSize="@dimen/material_body" />
    </RelativeLayout>

</android.support.v7.widget.CardView>