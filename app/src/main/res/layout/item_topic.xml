<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:padding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:minHeight="80dp">

        <ImageView
            android:id="@+id/item_topic_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/item_topic_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp" />

        <TextView
            android:id="@+id/item_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:layout_toEndOf="@id/item_topic_icon"
            android:layout_toLeftOf="@id/item_topic_reply"
            android:layout_toRightOf="@id/item_topic_icon"
            android:layout_toStartOf="@id/item_topic_reply"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_topic_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/item_topic_title"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/item_topic_icon"
            android:layout_toRightOf="@id/item_topic_icon" />

        <TextView
            android:id="@+id/item_topic_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/item_topic_title"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/item_topic_node"
            android:layout_toRightOf="@id/item_topic_node"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_topic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_topic_title"
            android:layout_margin="2dp"
            android:textSize="12sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>